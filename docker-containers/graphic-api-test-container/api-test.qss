
QLabel#TitleLabel {
	background-color: #124657;
	color: white;
	font-size: 40px;
	padding: 20px;
	border-radius: 10px;
	height: 80px;
}


QLabel {
	font-size: 28px;
	height: 50px;
}


QPushButton {
	background-color: #49a3b6;
	color: #124657;
	font-size: 32px;
	font-weight: bold;
	padding: 20px;
	border-radius: 15px;
}

QPushButton:pressed {
	background-color: #2d636f;
	color: #49a3b6;
}

QPushButton:disabled {
	background-color: #9fbccf;
	color: #5895ad;
}


QCheckBox {
	font-size: 28px;
	height: 50px;
}

QCheckBox::indicator {
	width:  40px;
	height: 40px;
}

QRadioButton {
	font-size: 28px;
	height: 50px;
}

QRadioButton::indicator {
	width:  40px;
	height: 40px;
}
